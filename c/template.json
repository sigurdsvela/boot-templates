{
	"name" : "c",
	"description" : "Entry point for a standard c project",
	"static" : "static",
	
	"options" : {
		"--vcs" : {
			"description" : "Choose version controll system",
			"values" : {
				"git" : "vcs/.gitignore",
				"svn" : "vcs/.svnignore"
			}
		},
		"--builder" : {
			"description" : "Choose builder script type",
			"values" : {
				"make" : "builder/makefile"
			}
		},
		"--tester" : {
			"description" : "Choose test system",
			"values" : {
				"manual" : {"builder/makefile-tester-manual":"makefile"}
			}
		}
	}
}