{
	"name" : "c",
	"description" : "Entry point for a standard c project",
	"static" : "static",
	
	"options" : {
		"--vcs" : {
			"description" : "Choose version controll system",
			"values" : {
				"git" : {"../../gitignores/C.gitignore":".gitignore"},
				"svn" : "vcs/.svnignore",
				"none" : []
			},
			"default" : "git"
		},
		"--builder" : {
			"description" : "Choose builder script type",
			"values" : {
				"make" : {"builder/makefile":"makefile"},
				"none" : []
			},
			"default" : "make"
		}
	}
}